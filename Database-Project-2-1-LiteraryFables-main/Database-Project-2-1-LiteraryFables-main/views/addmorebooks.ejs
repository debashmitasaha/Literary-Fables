    <style>
            @import url('https://fonts.googleapis.com/css2?family=Merriweather&display=swap');
            *{
                padding: 0;
                margin: 0;
                box-sizing: border-box;
                font-family: 'Merriweather';
            }

            body{
                display: flex;
                align-items: center;
                justify-content: center;
                min-height: 100vh;
                /* background: url(css/p6.jpeg); */
            }

            main{
                width: 300px;
                padding: 20px;
                border-radius: 10px;
                border: 2px solid black;
                background-color: wheat;
                /* backdrop-filter: blur(30px); */
                position: relative;
            }

            main header{
                position: absolute;
                top: 0;
                left: 50%;
                transform: translate(-50%);
                padding: 10px 20px;
                background-color: beige;
                border-radius: 0 0 10px 10px;
            }

            form{
                margin-top: 80px;
                display: flex;
                flex-direction: column;
                gap: 20px;
            }

            input[type="text"],
            input[type="password"]{
                padding: 10px;
                border: 2px solid white;
                width: 100%;
                border-radius: 25px;
                outline: none;
                background-color: wheat;
                color: black;
            }

            .form-design{
                position: relative;
                display: flex;
                align-items: center;
            }

            label{
                position: absolute;
                left: 30px;
                text-align: center;
                font-size: 12px;
                color: black;
                transition: .2s;
            }

            a{
                color: wheat;
            }

            p{
                color: white
            }

            button{
                border: none;
                padding: 10px;
                border-radius: 25px;
                cursor: pointer;
                background-color: beige;
            }

            
            input:valid+label,
            input:focus+label{
                background-color: wheat;
                color: black;
                transform: translate(2px, 8px);
                padding: 2px 5px;
                font-size: 12px;
                border-radius: 4px;
            }

        </style>
