<style>
    @import url('https://fonts.googleapis.com/css2?family=Merriweather&display=swap');
    *{
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        font-family: 'Merriweather';
    }

    body{
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        /* background: url(css/p6.jpeg); */
    }

    main{
        width: 300px;
        padding: 20px;
        border-radius: 10px;
        border: 2px solid black;
        background-color: wheat;
        /* backdrop-filter: blur(30px); */
        position: relative;
    }

    main header{
        position: absolute;
        font-size:15px ;
        top: 0;
        left: 50%;
        transform: translate(-50%);
        padding: 10px 20px;
        background-color: beige;
        border-radius: 0 0 5px 5px;
    }

    form{
        margin-top: 80px;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    input[type="text"],
    input[type="password"]{
        padding: 10px;
        border: 2px solid white;
        width: 100%;
        border-radius: 25px;
        outline: none;
        background-color: wheat;
        color: black;
    }

    .form-design{
        position: relative;
        display: flex;
        align-items: center;
    }

    label{
        position: absolute;
        left: 30px;
        text-align: center;
        font-size: 10px;
        color: black;
        transition: .2s;
    }

    a{
        color: wheat;
    }

    p{
        color: white
    }

    button{
        border: none;
        padding: 10px;
        border-radius: 25px;
        cursor: pointer;
        background-color: beige;
    }

    
    input:valid+label,
    input:focus+label{
        background-color: wheat;
        color: black;
        transform: translate(2px, 8px);
        padding: 2px 5px;
        font-size: 12px;
        border-radius: 4px;
    }
</style>

<body>
    <main>
        <header>
            <h4>Search Book</h4>
        </header>
        <form action="/searchBookInfo" , method="POST">
            <div class="form_design">
                <input type="text" placeholder="Name" id="Name" name="Name">
                <label for="Name"></label>
            </div>
            <div class="form_design">
                <input type="text" placeholder="Genre" id="ExchangedBookName" name="Genre">
                <label for="Genre"></label>
            </div>
            <div class="form_design">
                <input type="text" placeholder="Author" id="Author" name="Author">
                <label for="Author"></label>
            </div>
            <div class="form_design">
                <input type="text" placeholder="Minimum Price" id="minPrice" name="minPrice">
                <label for="Minimum Price"></label>
            </div>
            <div class="form_design">
                <input type="text" placeholder="Maximum Price" id="maxPrice" name="maxPrice">
                <label for="Maximum Price"></label>
            </div>
            <input type="hidden" name="USER_ID" value="<%= user_id %>">
                    

            <button>submit</button>

        </form>

    </main>

</body>

</html>