    <style>
            @import url('https://fonts.googleapis.com/css2?family=Merriweather&display=swap');
            *{
                padding: 0;
                margin: 0;
                box-sizing: border-box;
                font-family: 'Merriweather';
            }

            body{
                display: flex;
                align-items: center;
                justify-content: center;
                min-height: 100vh;
                /* background: url(css/p6.jpeg); */
            }

            main{
                width: 300px;
                padding: 20px;
                border-radius: 10px;
                border: 2px solid black;
                background-color: wheat;
                /* backdrop-filter: blur(30px); */
                position: relative;
            }

            main header{
                position: absolute;
                top: 0;
                left: 50%;
                transform: translate(-50%);
                padding: 10px 20px;
                background-color: beige;
                border-radius: 0 0 10px 10px;
            }

            form{
                margin-top: 80px;
                display: flex;
                flex-direction: column;
                gap: 20px;
            }

            input[type="text"],
            input[type="password"]{
                padding: 10px;
                border: 2px solid white;
                width: 100%;
                border-radius: 25px;
                outline: none;
                background-color: wheat;
                color: black;
            }

            .form-design{
                position: relative;
                display: flex;
                align-items: center;
            }

            label{
                position: absolute;
                left: 30px;
                text-align: center;
                font-size: 12px;
                color: black;
                transition: .2s;
            }

            a{
                color: wheat;
            }

            p{
                color: white
            }

            button{
                border: none;
                padding: 10px;
                border-radius: 25px;
                cursor: pointer;
                background-color: beige;
            }

            
            input:valid+label,
            input:focus+label{
                background-color: wheat;
                color: black;
                transform: translate(2px, 8px);
                padding: 2px 5px;
                font-size: 12px;
                border-radius: 4px;
            }

        </style>
    </head><link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.css" rel="stylesheet" id="bootstrap-css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    


    <body>
        <div style="transform: translateY(150px);  ">
            <h4 style="text-align: center; color: brown;">Borrow Form</h4>  
        <main>
            
            <!-- <header>
                <h4>Add Book</h4>
            </header> -->
            <form action="/borrowform" method="POST">
                
                <!-- <h3>Add books</h3> -->
                <div class="form_design">
                    <input type="date" id="START_TIME" name="START_TIME">
                    <label for="ISBN">START DATE</label>
                </div>

                <div class="form_design">
                    <input type="date" id="RETURN_TIME" name="RETURN_TIME">
                    <label for="RETURN_TIME">RETURN DATE</label>
                </div>

                <input type="hidden" name="USER_ID" value="<%= user_id  %>">
                <input type="hidden" name="LIBRARY_ID" value="<%= library_id  %>">
                
                <button>submit</button>
            </form>
                    
        </main>
    </div>
        
    </body>
